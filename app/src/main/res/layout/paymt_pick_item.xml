<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:id="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/li_pay"
    android:clickable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="5dip"
        android:padding="5dp"
        android:visibility="gone" >


        <com.broadbandcollection.widgets.MyTextView
            android:id="@+id/numb_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/label_blue_color"
            android:layout_below="@+id/tv_is_postpaid"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            app:fontName="@string/font_name" />

    </LinearLayout>
    <!-- List item name -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.broadbandcollection.widgets.MyTextView
                android:id="@+id/tv_is_postpaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:textColor="@color/label_red_color"
                android:textSize="15dp"
                android:text="Postpaid User"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                app:fontName="@string/font_name" />

            <com.broadbandcollection.widgets.MyTextView
                android:id="@+id/pmt_pik_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/label_blue_color"
                android:layout_below="@+id/tv_is_postpaid"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                app:fontName="@string/font_name" />

            <com.broadbandcollection.widgets.MyTextView
                android:id="@+id/pmt_pik_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/label_blue_color"
                android:layout_below="@+id/tv_is_postpaid"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                app:fontName="@string/font_name" />

            <com.broadbandcollection.widgets.MyTextView
                android:id="@+id/pmt_pik_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/label_blue_color"
                android:layout_below="@+id/tv_is_postpaid"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                app:fontName="@string/font_name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_show_direction"
                style="@style/AppBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/relative_selector"
                android:clickable="false"
                android:text="Show Direction"
                android:visibility="gone"/>


            <Button
                android:id="@+id/btn_inform_cust"
                style="@style/AppBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/relative_selector"
                android:clickable="false"
                android:text="Inform Customer" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>