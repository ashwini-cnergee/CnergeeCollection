<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/LabelRec"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_card_label_1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/label_black_color" />

       <TextView
            android:id="@+id/receptNo"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            style="@style/EditTextAppTheme"
            android:hint="@string/app_card_hint_1" >

            <requestFocus />
        </TextView>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_card_label_2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/label_black_color" />

        <TextView
            android:id="@+id/text_amount"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/EditTextAppTheme"
            android:editable="false"
            android:ems="10" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_card_label_3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/label_black_color" />

        <TextView
            android:id="@+id/text_mobile"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            style="@style/EditTextAppTheme"
           android:editable="false"
            android:maxLength="10" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/app_card_label_4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/label_black_color" />

        <TextView
            android:id="@+id/order_no"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:editable="false"
            style="@style/EditTextAppTheme"
            android:ems="10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" >

            <Button
                android:id="@+id/backBtn"
                style="@style/AppBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/relative_selector"
                android:layout_marginBottom="18dp"
                android:text="@string/app_back_btn" />

            <Button
                android:id="@+id/next"
                style="@style/AppBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/relative_selector"
                android:onClick="handleNextCommand"
                android:text="@string/app_card_btn_1" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>