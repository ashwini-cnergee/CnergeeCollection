<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cnergee"
    android:gravity="center"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/TextView01" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="20dip"
            android:paddingTop="5dip" >
            
             <TextView
                android:id="@+id/TextView03"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_label_4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_black_color" />

            <EditText
                android:id="@+id/etCustId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               	style="@style/EditTextAppTheme"
                android:ems="10"
                >
                
            </EditText>
            

            <TextView
                android:id="@+id/TextView08"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_label_2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_black_color" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               	style="@style/EditTextAppTheme"
                android:ems="10"
                />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_label_3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_black_color" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                style="@style/EditTextAppTheme"
                android:inputType="textPassword"
                />
            
            <TextView
                android:id="@+id/TextView05"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_label_5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/label_black_color" />

            <EditText
                android:id="@+id/et_tid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="0"
                style="@style/EditTextAppTheme"
               />

            <LinearLayout
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/AppBtnMarginTop"
                android:gravity="center_horizontal" >

                <Button
                    android:id="@+id/back"
                    style="@style/AppBtn"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/relative_selector"
                    android:text="@string/app_back_btn" />

                <Button
                    android:id="@+id/save"
                    style="@style/AppBtn"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/relative_selector"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/AppBtnMarginTop"
                    android:text="@string/app_btn_1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_drawable"
        android:gravity="center"
        android:text="@string/app_setting_title"
        android:textColor="#000000"
        android:textStyle="bold" />

    <include
        android:id="@+id/include1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        layout="@layout/footer" />

    <TextView
        android:id="@+id/versionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/include1"
        android:layout_alignRight="@+id/scrollView1"
        android:paddingRight="10dp"
        android:text="@string/app_sub_details_label_7"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/label_blue_color"
        android:textStyle="bold" />

</RelativeLayout>